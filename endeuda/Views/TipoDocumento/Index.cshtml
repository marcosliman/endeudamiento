
@{
    ViewBag.Title = "Tipo Documento";
}
@{
    var NombreMenu = "TipoDocumento";
    tesoreria.Helper.Seguridad seguridad = System.Web.HttpContext.Current.Session["Seguridad"] as tesoreria.Helper.Seguridad;
    var TieneCrear = seguridad.TienePermiso(NombreMenu, tesoreria.Helper.TipoAcceso.Crear);
    var TieneEditar = seguridad.TienePermiso(NombreMenu, tesoreria.Helper.TipoAcceso.Editar);
    var TieneEliminar = seguridad.TienePermiso(NombreMenu, tesoreria.Helper.TipoAcceso.Eliminar);
}
<div class="modal fade" id="modal-registro" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div id="editRegistro"></div>
        </div>
    </div>
</div>

<div class="d-sm-flex align-items-center justify-content-between">
    <h5 class="h5 mb-0 text-gray-800">Mantención Tipos de Documento</h5>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Inicio">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page">Mantención</li>
        <li class="breadcrumb-item active" aria-current="page">Tipos de Documento</li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card card-outline card-red collapsed-card">
            <div class="card-header">
                <h3 class="card-title">Filtros</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>

            <div class="card-body">
                <div class="form-group form-group-sm">
                    <div class="col-12 row">
                          <div class="col-sm-4">
                            @Html.DropDownList("categoria", (SelectList)ViewData["listaCategorias"], "--Seleccione Cliente--", htmlAttributes: new { @class = "form-control form-control-sm" })
                          </div>
                        <div class="form-group form-group-sm col-sm-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-swatchbook text-red"></i>
                                    </span>
                                    <input type="text" class="form-control form-control-sm col-sm-12" placeholder="Ingrese Nombre Documento" id="documento" name="documento" value="" />
                                </div>
                               
                            </div>
                        </div>
                        <div class="form-group form-group-sm col-sm-2">
                            <select name="activo" id="activo" class="form-control form-control-sm">
                                <option value="" selected>--Todos--</option>
                                <option value="true">SI</option>
                                <option value="false">NO</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-12">
                        <button class="btn btn-primary btn-block" type="button" onclick="RefreshLista()"><i class="fa fa-search"></i> Filtrar</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@if (TieneCrear == true)
{
    <nav class="navbar navbar-light mb-1" style="background-color: #e3f2fd;">
        <div class="form-inline my-2 my-lg-0">

        </div>
        <div class="form-inline my-2 my-lg-0">
            <button class="btn btn-primary btn-sm justify-content-end" type="button" onclick="CreateRegistro(0)"><i class="fa fa-plus"></i> Nuevo Tipo Documento</button>
        </div>
    </nav>
}
<div class="row">
    <!-- Datatables -->
    <div class="col-lg-12">

        <div class="card mb-4">
            <div class="card-body">
                <table class="table table-bordered table-hover dataTable dtr-inline" width="100%" id="grillaEmpresa" data-order='[[ 1, "asc" ]]'>
                    <thead class="thead-light">
                        <tr>
                            <th class="no-sort" width="2%"><i class="fa fa-user-edit text-grey"></i></th>
                            <th>Categoria</th>
                            <th>Nombre Tipo Documento</th>
                            <th>Activo</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>
        </div>
    </div>

    <!-- DataTable with Hover -->
    <script>

        $(document).ready(function () {
            AbrirMenu("@NombreMenu");
            initTable();
        });
        function RefreshLista() {
            var table = initTable();
            table.ajax.reload(function (json) { });
        }
        function initTable() {
            var table = $('#grillaEmpresa').DataTable({
                "scrollX": true,
                "retrieve": true,
                'ajax': {
                    "type": "POST",
                    "url": '/TipoDocumento/TipoDocumento_Read/0',
                    "data": function (d) {
                        d.categoria = $("#categoria").val();
                        d.documento = $("#documento").val();
                        d.activo = $("#activo").val();
                    },
                    "dataSrc": ""
                },
                columns: [

                    {
                        "mData": null,
                        "bSortable": false,
                        "mRender": function (o, type, row) {
                           var boton = '';
                            var TieneEditar = '@TieneEditar';
                            if (TieneEditar == "True") {
                                boton = '<a class="btn-primary btn-xs" href="JavaScript:CreateRegistro(' + o.IdTipoDocumento + ')" title="Eliminar"><i class="fa fa-edit"></i></a> ';
                            }

                            return boton;
                        }
                    },
                    { "data": "NombreCategoriaDocumento" },
                    { "data": "NombreTipoDocumento" },
                    {
                        "mData": null,
                        "mRender": function (o, type, row) {
                            var estado = 'NO';
                            if (o.Activo == 1) {
                                estado = "SI";
                            }
                            return estado;
                        }
                    }
                ]
            });

            return table;
        }

        function CreateRegistro(tmpIdTipoDocumento) {
            $('#modal-registro').modal('show');
            $.ajax({
                url: "/TipoDocumento/Create/" + tmpIdTipoDocumento,
                type: "Get",
                data: {},
                beforeSend: function () {
                    $("#editRegistro").html('<i class="fa fa-circle-o-notch fa-spin"></i> Cargando...');
                    mostrarCargando();
                },
                success: function (data) {
                    $("#editRegistro").empty();
                    $("#editRegistro").html(data);
                    esconderCargando();
                }
            });
        }

    </script>
</div>


