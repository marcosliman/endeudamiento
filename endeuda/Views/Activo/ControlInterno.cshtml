<div class="modal fade" id="ModalAddActivo" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="modal-crearLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div id="datosActivo"></div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        //$.fn.dataTable.moment('DD/MM/YYYY');
        AbrirMenu("ControlInterno");
        RefreshLista();
    });

    function RefreshLista() {
        //$('#grillaActivo').empty();
        var table = initTable();
        table.ajax.reload(function (json) { });
    }

    function initTable() {
        var buttonCommon = {
            text: 'Exportar a Excel',
            title: 'ACTIVOS ',
            extend: 'excelHtml5',
            exportOptions: {
                columns: "thead th:not(.noExport)"
            }
        };
        var table = $('#grillaActivo').DataTable({
            "retrieve": true,
            'ajax': {
                "type": "POST",
                "url": '/Activo/ListaActivo_Read/',
                "data": function (d) {
                    d.numeroActivo = $('#numeroActivoB').val();
                    d.codigoActivo = $('#codigoInternoB').val();
                },
                "dataSrc": ""
            },
            /*columnDefs: [
                { targets: '_all', className: 'align-middle' },
                {
                    targets: [5, 6],
                    render: function (data) {
                        var fecha = DateDatatable(data);
                        return fecha;
                    }
                }
            ],*/
            buttons: [
                $.extend(true, {}, buttonCommon, {
                    filename: "Activos",
                    sheetName: "Activos"
                })
            ],
            columns: [
                {
                    "mData": null,
                    "bSortable": false,
                    "mRender": function (o, type, row) {
                        var boton = '';
                        // if (o.Editable == true) {
                        boton = '<a class="btn btn-info btn-sm" data-toggle="modal" data-target="#ModalAddActivo" onclick="EditActivo(' + o.IdActivo + ')"><i class="fa fa-edit"></i></a> ';
                        //}
                        return boton;
                    }
                },
                {
                    "mData": null,
                    "bSortable": false,
                    "mRender": function (o, type, row) {
                        var boton = '';
                        // if (o.Editable == true) {
                        boton += '<a class="btn btn-danger btn-sm" onclick="EliminarActivo(' + o.IdActivo + ')"><i class="fa fa-trash"></i></a> ';
                        //}
                        return boton;
                    }
                },
                { "data": "NumeroInterno" },
                { "data": "CodSoftland" },
                { "data": "Capacidad" },
                { "data": "Descripcion" },
                { "data": "Marca" },
                { "data": "Modelo" },
                { "data": "Motor" },
                { "data": "Serie" },
                { "data": "Anio" },
                { "data": "Valor" }
            ]
        });
        $("#grillaActivo").dataTable().fnDestroy();
        return table;
    }

    function EditActivo(idActivo) {
        //$("#datosMovimiento").empty();
        $('#ModalAddActivo').modal('show');
        $.ajax({
            url: "/Activo/ModalVerActivo",
            type: "Post",
            data: { IdActivo: idActivo },
            beforeSend: function () {
                $("#datosActivo").html('<i class="fa fa-circle-o-notch fa-spin"></i> Cargando...');
            },
            success: function (data) {
                $("#datosActivo").empty();
                $("#datosActivo").html(data);
            }
        });
    }

    function EliminarActivo(idActivo) {
        $('#idActivo').val(idActivo);
        a = confirm("Seguro de Eliminar el registro seleccionado?")
        if (a) {
            $.ajax({
                type: 'POST',
                url: '/Activo/EliminarActivo',
                data: { idActivo: idActivo},
                success: function (data) {
                    Success_dl(data);
                },
                failure: function (data) {
                    Failure_dl(data);
                }
            })
        }
    }

    function Success_dl(data) {
        if (data.result.Estado == "0") {
            toastr.success(data.result.Mensaje);
            RefreshLista();

        }
        else {
            toastr.error(data.result.Mensaje);
        }
    }
    function Failure_dl(data) {
        //esconderCargando();
        toastr.error(data.result.Mensaje);
    }
</script>
