            beforeSend: function () {
                $("#datosActivosSoftland").html('<i class="fa fa-circle-o-notch fa-spin"></i> Cargando...');
            },
            success: function (data) {
                $("#datosActivosSoftland").empty();
                $("#datosActivosSoftland").html(data);
            }
        });*/
    }
</script>