                                <th>Descripción</th>
                                <th>Marca</th>
                                <th>Modelo</th>
                                <th>Motor</th>
                                <th>Chasis/Serie</th>
                                
                                <th>Año</th>
                                <th>Valor</th>
                                <th>G/D</th>
                                <th>Mes/Año</th>
                                
                                
                                
                                <th>CC MQS S.A.</th>
                                <th>CC MQS SUR S.A.</th>
                                <th>Num. Factura</th>
                                <th>Valor Factura</th>

                                <th>Patente</th>
                                
                                
                                <th>Leasing</th>
                                <th>Banco</th>
                                <th>Descripción</th>
                                <th>Poliza</th>
                                <th>Num. Endose</th>
                                <th>Fec. Solicitud</th>

