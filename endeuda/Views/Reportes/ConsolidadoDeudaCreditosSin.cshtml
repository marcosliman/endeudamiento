    function initTable() {
        var buttonCommon = {
            text: 'Exportar a Excel',
            title: 'Consolidado sin Garantía',
            extend: 'excelHtml5',
            exportOptions: {
                columns: "thead th:not(.noExport)",
                format: {
                    body: function (data, row, column, node) {
                        var texto = node.innerText;
                        texto = (column > 0) ? texto.replace(/[$.]/g, '') : texto;
                        texto = (column > 0) ? texto.replace(/[$,]/g, '.').replace(/[$~]/g, '.') : texto;
                        return texto;
                    }
                }
            }
        };
        var table = $('#grillaEmpresa').DataTable({
            buttons: [
                $.extend(true, {}, buttonCommon, {
                    filename: "Consolidado_sin_Garantia"
                })
            ],
            "retrieve": true,
            'ajax': {
                "type": "POST",
                "url": '/Reportes/ConsolidadoDeudaCreditosCon_Read/0',
                "data": function (d) {
                    d.IdEmpresaBus = $("#IdEmpresaBus").val();
                    d.IdBancoBus = $("#IdBancoBus").val();
                    d.anioBus = $("#anioBus").val();
                    d.IdMesBus = $("#IdMesBus").val();
                    d.valorUf = $("#valorUfBus").val();
                    d.tipoFinanciamiento = "@IdTipoFinanciamiento";
                },
                "dataSrc": ""
            },
            columnDefs: [
                { targets: '_all', className: 'align-middle' },
                {
                    targets: [9, 10],
                    render: function (data) {
                        var fecha = DateDatatable(data);
                        return fecha;
                    }
                },
                {
                    targets: [2, 5, 6, 7, 8],
                    render: function (data, type, row) {
                        var numFormt = "";
                        if (data != null) {
                            var num = data.toString();
                            numFormt = SeparadorMiles(num);
                        }
                        return numFormt;
                    }
                }
            ],
            columns: [

                { "data": "RazonSocial" },
                { "data": "NombreBanco" },
                { "data": "DeudaInicial" },
                { "data": "TipoGarantia" },
                { "data": "NumeroContrato" },
                { "data": "TasaAnual" },
                { "data": "CuotaMes" },
                { "data": "CapitalPagado" },
                { "data": "SaldoInsoluto" },
                { "data": "FechaInicio" },
                { "data": "FechaTermino" }
            ]
        });

        return table;
    }
