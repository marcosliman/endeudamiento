@model modelo.Models.Softland.iw_tprod
@{
    ViewBag.Title = "Agregar Cuenta";
}
@{
    Layout = "~/Views/Shared/_Popup.cshtml";
}

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Detalle Producto</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-6 col-form-label">Código Producto</label>
        <div class="col-sm-6">
            @Model.CodProd
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-6 col-form-label">Nombre y/o Datos Técnicos Producto</label>
        <div class="col-sm-6">
            @Model.DesProd
        </div>
    </div>
    
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-6 col-form-label">Sub-Grupo</label>
        <div class="col-sm-6">
            @ViewBag.SubGrupo
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-6 col-form-label">Grupo</label>
        <div class="col-sm-6">
            @ViewBag.Grupo
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-6 col-form-label">Unidad de Medida</label>
        <div class="col-sm-6">
            @ViewBag.DesUMed
        </div>
    </div>
    
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-6 col-form-label">IVA</label>
        <div class="col-sm-6">
            @if (Model.Impuesto == -1)
            {
                <text>AFECTO</text>
            }
            else
            {
                <text>EXENTO</text>
            }
        </div>
    </div>
    
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cerrar</button>
</div>